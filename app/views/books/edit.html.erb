<h3>Editing Book</h3>
<%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>
    <br><%= f.submit "Update Book" %></br>
<% end %>

<p><%= link_to "Show", book_path(@book.id)%> | <%= link_to "Back", "/books" %> </p>